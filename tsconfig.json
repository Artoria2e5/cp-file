{
	"compilerOptions": {
		"target": "es2018",
		"newLine": "lf",
		"strict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"allowJs": true,
		"checkJs": true,
		"outDir": "ts-build",
		"esModuleInterop": true,
		"moduleResolution": "Node"
	},
	"include": [
		"*.js"
	],
	"exclude": [
		"index.test-d.ts",
		"test"
	]
}
